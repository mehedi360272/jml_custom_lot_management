<odoo>
    <record id="view_mrp_warning_wizard_confirmed_form" model="ir.ui.view">
        <field name="name">mrp.warning.wizard.confirmed.form</field>
        <field name="model">mrp.warning.wizard.confirmed</field>
        <field name="arch" type="xml">
            <form string="Warning - Confirmed">
                <sheet>
                    <group>
                        <field name="warning_message" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Continue" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mrp_warning_wizard_progress_form" model="ir.ui.view">
        <field name="name">mrp.warning.wizard.progress.form</field>
        <field name="model">mrp.warning.wizard.progress</field>
        <field name="arch" type="xml">
            <form string="Warning - In Progress">
                <sheet>
                    <group>
                        <field name="warning_message" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Continue" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
