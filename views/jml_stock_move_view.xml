<odoo>
    <record id="view_stock_move_line_form_inherit_generate_lot" model="ir.ui.view">
        <field name="name">stock.move.tree.generate.lot</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <button name="action_generate_lot_name"
                        type="object"
                        string="Generate Lot"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>


