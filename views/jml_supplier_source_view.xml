<?xml version="1.0"?>
<odoo>

    <record id="jml_supplier_source_view_tree" model="ir.ui.view">
        <field name="name">jml_supplier_source.view.list</field>
        <field name="model">jml.supplier.source</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="jml_supplier_source_action">
        <field name="name">Supplier Source</field>
        <field name="res_model">jml.supplier.source</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
